<li id= "micropost-<%= micropost.id %>">
　<%= link_to image_tag("user_img.jpeg", alt: "user_img", width: "200px"), micropost.user %>
  <span class= "user">
    <%= link_to( micropost.user.user_name, micropost.user )%>
  </span>
  <span class= "content">
    <%= micropost.content %>
    <!--display_imageは、micropostモデルで定義したメソッド-->
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class= "timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to  "投稿を削除", micropost, method: :delete,
                     data: { confirm: "本当に投稿を削除してもいいですか?"} %>
    <% end %>
    </span>
</li>
