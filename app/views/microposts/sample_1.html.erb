<li id= "micropost-<%= micropost.id %>">
  <%= link_to image_tag("user_img.jpeg", alt: "user_img", width: "50px"), micropost.user %>
  <span class= "user">
    <%= link_to( micropost.user.user_name, micropost.user )%>
  </span>
  <span class= "content">
    <!--.urlがないとエラーになる-->
    <%= link_to (image_tag micropost.image.url(:medium)), micropost_path(micropost.user) %>
    <%= micropost.content %>
  </span>
  <span class= "timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to  "投稿を削除", micropost, method: :delete,
                     data: { confirm: "本当に投稿を削除してもいいですか?"} %>
    <% end %>
  </span>
  <span class= "favorite" id="favorite-icon-post-<%= micropost.id.to_s %>" >
    <% if micropost.bookmarked_by(current_user) %>
      <!-- お気に入りを削除 -->
      <%= link_to( micropost_favorite_path(micropost.id, micropost.bookmarked_by(current_user).id), method: :delete, remote: true) do %>
        <div class="icons">
          <i class="fas fa-bookmark" style="font-size: 2em;" aria-hidden="true"></i>
        </div>
      <% end %>
    <% else %>
      <!-- お気に入り登録 -->
      <%= link_to( micropost_favorites_path(micropost.id), method: :post, remote: true) do %>
        <div class="icons">
          <i class="far fa-bookmark" style="font-size: 2em;" aria-hidden="true"></i>
        </div>
      <% end %>
    <% end %>
  </span>

  <br>
  <span class= "comment">
    <!-- render に「 micropost: micropost 」と記入することで パーシャル先に変数を渡せる-->
    <%= render 'comments/comment_list', micropost: micropost %>
    <section class="comment_form">
     <%= form_with(model: [micropost, Comment.new], local: true) do |f| %>
       <%= f.hidden_field :micropost_id, value: micropost.id %>
       <div class="field">
         <%= f.text_area :comment, placeholder: "コメントする" %>
       </div>

        <%= f.submit "コメントを投稿", class: "btn btn-primary" %>
     <% end %>
    </section>
  </span>

</li>
