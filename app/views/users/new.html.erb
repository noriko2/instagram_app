<% provide(:title, 'Sign up') %>


<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6 column-space" style="background:white; border:1px solid #dae5f0;">
    <h1>Sign up</h1>
    <!--@userをform_withに渡すと、/usersへHTTPのPOSTリクエスト送信すると認識される===>createアクションが反応 -->
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :full_name, "フルネーム" %>
      <%= f.text_field :full_name, class: 'form-control' %>

      <%= f.label :user_name, "ユーザーネーム" %>
      <%= f.text_field :user_name, class: 'form-control' %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "確認用パスワード" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-sm-3"></div>

</div>
