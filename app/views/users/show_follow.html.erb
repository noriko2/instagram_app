<!-- フォローしているユーザーとフォロワーの両方を表示するview-->

<% provide(:title, @title) %>

<div class='row'>
  <aside class="col-md-4">

    <section class="user_info">
      <h1><%= @user.user_name %></h1>
      <span><%= link_to "my profile", @user %></span>
      <span><b>投稿 </b> <%= @user.microposts.count %> 件</span>
    </section>

    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
    <% end %>
  </div>

</div>
