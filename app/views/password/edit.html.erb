<% provide(:title, 'パスワード変更') %>
<h1>パスワードの更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: password_path(params[:id]),
                  local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :old_password, "現在のパスワード" %>
      <%= f.password_field :old_password, class: 'form-control' %>

      <%= f.label :password, "新しいパスワード"%>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "新しいパスワードを確認" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "パスワードの更新", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
