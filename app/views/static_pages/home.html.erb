<!-- yield の中身 -->
<!-- ログインしているかどうかで画面の表示を変える-->


<% if logged_in? %>
  <% provide(:title, "みんなの投稿") %>
  <div class= "col-md-8">
    <h3>みんなの投稿</h3>
    <%= render 'shared/feed' %>
  </div>

<% else %>
  <div class="center jumbotron">
    <h1>Instagramへようこそ</h1>
    <h2>日常を投稿して世界中の人と繋がろう</h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("Instagram_logo.jpeg", alt: "Instagram logo", width: "200px"),
                        "#URL" %>

<% end %>
