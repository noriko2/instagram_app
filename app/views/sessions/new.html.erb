<% provide(:title, 'Login') %>



<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6 column-space" style="background:white; border:1px solid #dae5f0;">
    <h1>Log in</h1>
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: 'form_control' %>

        <%= f.label :password, "パスワード" %>
        <%= link_to "(パスワードをお忘れの方はこちら)", new_password_reset_path %>
        <%= f.password_field :password, class: 'form_control' %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>次回から自動でログイン</span>
        <% end %>

        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
    <p>新規ユーザーの方は<%= link_to("こちら", signup_path) %> へ</p>
  </div>
  <div class="col-sm-3"></div>
</div>
