<!-- 通知アイコンのパーシャル -->

<%= link_to(notifications_path) do %>

  <% if unchecked_notifications.any? %>
  　<div class="fa-stack">
      <i class="far fa-bell fa-stack-2x" style="font-size: 2em;" aria-hidden="true"></i>
      <i class="fas fa-circle n-circle fa-stack-1x" style="font-size: 0.5em;" aria-hidden="true"></i>
    </div>

  <% else %>
    <div class="icons">
      <i class="far fa-bell" style="font-size: 2em;" aria-hidden="true"></i>
    </div>
  <% end %>

<% end %>
